<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Inicio</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="./public/css/dashboardStyles.css" />
    <link rel="stylesheet" href="/static/format.css" />
  </head>

  <body>
    <header class="header">
      <div class="container2 header__container">
        <div class="header__logo">
          <img
            class="header__img"
            src="https://image.ibb.co/kcVou6/path3000.png"
          />
          <h1 class="header__title">
            Banca<span class="header__light"> Facil</span>
          </h1>
        </div>
      </div>
    </header>

    <div class="container">
      <div class="section1">
        <div class="subsec1">
          <div class="item0">
            <i class="img bi bi-person-circle"></i>
            <div class="data-user">
              <p class="name"><%= usuario[0].nombre %></p>
              <p class="tpu"><%= usuario[0].tipo_cuenta%></p>
            </div>
          </div>
          <div class="item1" id="item">
            <i class="active bi bi-house"></i>
            <a href="/perfil" class="active">Inicio</a>
          </div>
          <div class="item1" id="item">
            <i class="inactive bi bi-credit-card"></i>
            <a href="/pagos" class="inactive">Pagos</a>
          </div>
          <div class="item1" id="item">
            <i class="inactive bi bi bi-cash-coin"></i>
            <a href="/depositar" class="inactive">Depositos</a>
          </div>
          <div class="item1" id="item">
            <i class="inactive bi bi-lungs"></i>
            <a href="/seguro" class="inactive">Seguro</a>
          </div>
          <div class="item1" id="item">
            <i class="inactive bi bi-gear"></i>
            <a href="/config" class="inactive">Configuración</a>
          </div>
        </div>
        <div class="subsec2">
          <div class="item2">
            <i class="inactive bi bi-box-arrow-left"></i>
            <a href="/logout" class="inactive">Cerrar sesión</a>
          </div>
        </div>
      </div>
      <div class="section2">
        <div class="tarjeta">
          <p class="cuenta">$<%= usuario[0].saldo %></p>
          <div class="tarjeta-data">
            <p class="data" id="tarjeta">
              <%= usuario[0].servicios[0].notarjeta %>
            </p>
            <p class="Id-tarjeta">VISA</p>
          </div>
        </div>
        <div class="options">
          <div class="option">
            <div class="icon">
              <i class="opt-icon bi bi-arrow-left-right"></i>
            </div>
            <a href="/transferencia">Transferir</a>
          </div>
          <div class="option">
            <div class="icon">
              <i class="opt-icon bi bi-receipt-cutoff"></i>
            </div>
            <a href="/Historial"> Historial</a>
          </div>
          <div class="option">
            <div class="icon">
              <i class="opt-icon bi bi-graph-down-arrow"></i>
            </div>
            <a href="/limites">Límites</a>
          </div>
          <div class="option">
            <div class="icon">
              <i class="bi bi-exclamation"></i>
            </div>
            <a href="/mas">Más</a>
          </div>
        </div>

        <h1 class="sh">Shortcuts</h1>
        <div class="shortcuts">
          <div class="shor">
            <img
              class="img-short"
              src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?auto=format&fit=crop&q=80&w=1000&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8cGVyc29uYXxlbnwwfHwwfHx8MA%3D%3D"
              alt=""
            />
            <a href="">Alex's Phone</a>
            <p>$15</p>
          </div>
          <div class="shor">
            <img
              class="img-short"
              src="https://i.pinimg.com/originals/19/36/29/193629cdc245cf8f9b35d52a2f2719f8.png"
              alt=""
            />
            <a href="">Orribble subscription</a>
            <p>$36</p>
          </div>
          <div class="shor">
            <img
              class="img-short"
              src="https://cdn3.iconfinder.com/data/icons/picons-social/57/56-apple-512.png"
              alt=""
            />
            <a href="">¡Cloud 50GB</a>
            <p>$1.19</p>
          </div>
        </div>
      </div>
      <div class="section3">
        <h5>Balance total</h5>
        <p class="balance"><b>$<%= usuario[0].saldo %></b></p>
        <div class="sel-btn">
          <button class="btn btn-active">Ingresos</button>
          <button class="btn btn-inactive">Gastos</button>
        </div>
        <canvas id="myChart" width="400" height="200"></canvas>
        <h3>Últimas transacciones</h3>
        <hr />
        <% usuario[0].transacciones.forEach(function(transaccion) { %>
        <div class="transaction">
          <div class="sec-tran">
            <div class="data-transaction">
              <i class="bi bi-person-fill"></i>
              <p>Cuenta destino: <%= transaccion.cuentadestino %></p>
            </div>
            <div class="data-trans">
              <% if (transaccion.tipodemovimiento==='Transferencia' ) { %>
              <p class="cost red-text">-$<%= transaccion.monto %></p>
              <% } else if (transaccion.tipodemovimiento==='Deposito' ) { %>
              <p class="cost green-text">+$<%= transaccion.monto %></p>
              <% } else { %>
              <p class="cost">-$<%= transaccion.monto %></p>
              <% } %> <% const fechaCompleta=new
              Date(transaccion.fechadetransaccion); const
              dia=fechaCompleta.getDate().toString().padStart(2, '0' ); const
              mes=(fechaCompleta.getMonth() + 1).toString().padStart(2, '0' );
              const anio=fechaCompleta.getFullYear(); const
              horas=fechaCompleta.getHours().toString().padStart(2, '0' ); const
              minutos=fechaCompleta.getMinutes().toString().padStart(2, '0' );
              const segundos=fechaCompleta.getSeconds().toString().padStart(2,
              '0' ); const fechaHoraFormateada=`${anio}-${mes}-${dia}
              ${horas}:${minutos}:${segundos}`; %>
              <li>Fecha y Hora: <%= fechaHoraFormateada %></li>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="./javascript/Home.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
